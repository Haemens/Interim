enum ActivityTargetType {
  JOB
  APPLICATION
  CANDIDATE
  CLIENT
  JOB_REQUEST
  SHORTLIST
  EMAIL_CAMPAIGN
  PUBLICATION
  MISSION
  OTHER
}

enum ActivityAction {
  CREATED
  UPDATED
  STATUS_CHANGED
  NOTE_ADDED
  EMAIL_SENT
  EMAIL_CAMPAIGN_LAUNCHED
  CONTACT_LOGGED
  SHORTLIST_CREATED
  CANDIDATE_MOVED_STAGE
  MISSION_STARTED
  MISSION_ENDED
  OTHER
}

model ActivityEvent {
  id          String   @id @default(cuid())
  agencyId    String
  actorUserId String?
  
  targetType  ActivityTargetType
  targetId    String
  action      ActivityAction
  summary     String
  metadata    Json?
  
  createdAt   DateTime @default(now())

  agency      Agency @relation(fields: [agencyId], references: [id], onDelete: Cascade)
  actor       User?  @relation(fields: [actorUserId], references: [id], onDelete: SetNull)

  @@index([agencyId, createdAt])
  @@index([targetType, targetId, createdAt])
}
