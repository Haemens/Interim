# =============================================================================
# QuestHire Environment Variables
# =============================================================================
# Copy this file to .env.local and fill in the values
#
# Required variables are marked with [REQUIRED]
# Production-only requirements are marked with [PROD]

# -----------------------------------------------------------------------------
# Database (Neon PostgreSQL in production) [REQUIRED]
# -----------------------------------------------------------------------------
DATABASE_URL="postgresql://user:password@localhost:5432/questhire?schema=public"

# -----------------------------------------------------------------------------
# NextAuth.js [REQUIRED]
# -----------------------------------------------------------------------------
NEXTAUTH_URL="http://localhost:3000"
# Generate with: openssl rand -base64 32
NEXTAUTH_SECRET="your-super-secret-key-generate-with-openssl-rand-base64-32"

# -----------------------------------------------------------------------------
# Stripe [PROD]
# -----------------------------------------------------------------------------
STRIPE_SECRET_KEY="sk_test_..."
STRIPE_WEBHOOK_SECRET="whsec_..."
STRIPE_PUBLISHABLE_KEY="pk_test_..."
STRIPE_PRICE_PRO="price_..."
STRIPE_PRICE_AGENCY_PLUS="price_..."

# -----------------------------------------------------------------------------
# File Storage (S3-compatible: AWS S3, Cloudflare R2, MinIO, etc.)
# -----------------------------------------------------------------------------
STORAGE_BUCKET="questhire-uploads"
STORAGE_ACCESS_KEY_ID="your-access-key"
STORAGE_SECRET_ACCESS_KEY="your-secret-key"
STORAGE_REGION="auto"
# Optional: Custom endpoint for S3-compatible services (R2, MinIO)
# STORAGE_ENDPOINT="https://your-account.r2.cloudflarestorage.com"
# Optional: Public URL base for uploaded files
# STORAGE_PUBLIC_BASE_URL="https://cdn.yourdomain.com"

# -----------------------------------------------------------------------------
# Redis (Upstash-compatible) - For rate limiting in production
# -----------------------------------------------------------------------------
# Optional in development (uses in-memory fallback)
# Recommended for production with multiple instances
# REDIS_URL="https://your-instance.upstash.io"
# REDIS_TOKEN="your-upstash-token"

# -----------------------------------------------------------------------------
# Email Provider
# -----------------------------------------------------------------------------
# Provider: "console" (dev), "resend", or "sendgrid"
EMAIL_PROVIDER="console"
EMAIL_FROM_DEFAULT="QuestHire <noreply@yourdomain.com>"

# Resend (recommended for production)
# RESEND_API_KEY="re_..."

# SendGrid (alternative)
# SENDGRID_API_KEY="SG...."

# -----------------------------------------------------------------------------
# Monitoring (Sentry)
# -----------------------------------------------------------------------------
# Optional: Enable error tracking with Sentry
# SENTRY_DSN="https://your-key@sentry.io/project-id"

# -----------------------------------------------------------------------------
# App Configuration
# -----------------------------------------------------------------------------
NEXT_PUBLIC_APP_URL="http://localhost:3000"
NEXT_PUBLIC_APP_NAME="QuestHire"
# Optional: Set app version (used in healthcheck)
# APP_VERSION="1.0.0"

# -----------------------------------------------------------------------------
# Feature Flags
# -----------------------------------------------------------------------------
# Enable auto-sync of application status from client feedback
# When a client approves/rejects a candidate on a shortlist,
# the application status is automatically updated.
# APPROVED → QUALIFIED, REJECTED → REJECTED
# Default: false (feedback stored but status unchanged)
ENABLE_FEEDBACK_SYNC=false
